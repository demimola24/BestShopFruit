<?xml version="1.0" encoding="UTF-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:BestShopFruit.View.Home"
             xmlns:views="clr-namespace:BestShopFruit.View.Home"
             x:Class="BestShopFruit.View.Home.HomePage"
             Shell.FlyoutBehavior="Disabled">
  <TabBar>        
        <Tab Title="Home" Icon="home.svg">
            <ShellContent ContentTemplate="{DataTemplate views:ProductsPage}" Route="ProductsPage" />
        </Tab>

         <Tab Title="Cart" Icon="cart.svg">
            <ShellContent ContentTemplate="{DataTemplate views:CartPage}" Route="CartPage" />
        </Tab>
    
        <Tab Title="History" Icon="recently_viewed.svg">
            <ShellContent ContentTemplate="{DataTemplate views:OrderedPage}" Route="OrderedPage" />
        </Tab>    
    </TabBar>
     
</Shell>